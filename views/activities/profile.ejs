<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/styles.css">
    <title>User Profile</title>
</head>
<body>
    <div class="container">
        <%- include('../partials/_navbar.ejs') %>
        <h1>Profile of <%= user.username %></h1>

        <!-- Profile Picture Section -->
        <div class="profile-pic">
            <% if (user.profilePic) { %>
                <img src="<%= user.profilePic %>" alt="Profile Picture" />
            <% } else { %>
                <p>No profile picture uploaded.</p>
            <% } %>
        </div>

        <!-- Email Input Section -->
        <form action="/profile/update" method="POST" enctype="multipart/form-data">
            <p><strong>Profile Picture:</strong></p>
            <input type="file" name="profilePicture" accept="image/*">
            <p><strong>Email:</strong></p>
            <input type="email" name="email" value="<%= user.email %>" required>
            <button type="submit">Update Profile</button>
        </form>
        

        <p><strong>Joined on:</strong> <%= user.createdAt ? user.createdAt.toDateString() : 'Date not available' %></p>
        
        <h2>Your Activities</h2>
        <ul>
            <% if (user.activity && user.activity.length > 0) { %>
                <% user.activity.forEach(activity => { %>
                    <li>
                        <%= activity.name %>: <%= activity.duration %> minutes on <%= activity.date.toDateString() %>
                    </li>
                <% }) %>
            <% } else { %>
                <li>No activities logged yet.</li>
            <% } %>
        </ul>
        
        <a href="/activities">Back to Activities</a>
    </div>
</body>
</html>

