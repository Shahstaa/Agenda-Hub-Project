<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <title>User Profile</title>
</head>
<body>
    <%- include('../partials/_navbar.ejs') %>
    <div class="profile-container">
        <div class="profile-header">
            <h1>Profile of <%= user.username %></h1>
            <div class="profile-pic">
                <% if (user.profilePicture) { %>
                    <img src="<%= user.profilePicture %>" alt="Profile Picture" />
                <% } else { %>
                    <p>No profile picture uploaded.</p>
                <% } %>
            </div>
        </div>
        <form action="/activities/profile" method="POST" enctype="multipart/form-data">
            <p><strong>Profile Picture URL:</strong></p>
            <input type="text" name="profilePicture"></form>
       <form action="/activities/profile" method="POST" enctype="multipart/form-data">
            <p><strong>Joined on:</strong> <%= user.createdAt ? user.createdAt.toDateString() : 'Date not available' %></p></form>  
        <form action="/activities/profile" method="POST" enctype="multipart/form-data"></form>
            <h2>Your Activities</h2>
            <ul>
                <% if (user.activity && user.activity.length > 0) { %>
                    <% user.activity.forEach(activity => { %>
                        <li>
                            <%= activity.name %>: <%= activity.duration %> minutes on <%= activity.date.toDateString() %>
                        </li>
                    <% }) %>
                <% } else { %>
                    <li>No activities logged yet.</li>
                <% } %>
            </ul>
            <button type="submit">Update Profile</button>
        </form>
        
        <a href="/activities">Back to Activities</a>
    </div>
</body>
</html>

